/* NIB
global-reset()
reset-html5()*/

#ForkMe
  border 0 none
  position absolute
  right 0
  top 55px
  z-index 2

.lanyrd-target-splat
  border black solid thin
  background-color #EDF3FE
  padding 1em
  width 300px
  margin auto

.nantesjs-logo
  height 196px
  width 196px

.photo-elephant
  margin 10px auto

#scrollTop
  position absolute
  bottom 0
  right 0
  height 40px
  width 40px
  line-height 40px
  margin-right 30px
  margin-bottom 10px
  background-color $gray1
  color white
  border-radius 3px
  cursor pointer

body
  font-family "Lucida Grande", Helvetica, Arial, sans-serif
  width 100%
  height 100%

footer
  text-align center

*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

*:before,
*:after
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

a
  color #03080C

.ribbon a
  color #f2f2f2

.ribbon .code a
  color #2484c1

.content-head-ribbon
  padding-top 40px

img
  max-width 100%
  height auto

button
  margin-right 5px

.sr-only
  border 0 none
  clip rect(0px, 0px, 0px, 0px)
  height 1px
  margin -1px
  overflow hidden
  padding 0
  position absolute
  width 1px

.nostyle
  list-style-type none

.nostyle li
  margin-bottom 10px

.icons > span
  float left
  width 25%

.icons .fa
  margin-right 10px

.text-left
  text-align left

#idDivSrc pre code
  color #f2f2f2
  background-color transparent !important

#idDivToMarkdown > *
  background-color #f2f2f2

/* phones
@media screen and (max-width: 479px) */

/* small tablets
@media screen and (min-width: 480px) and (max-width: 767px) */

/* regular tablets, desktop */
@media screen and (min-width: 768px) and (max-width: 1919px)
  body
    text-align center

  .pure-form .form-group
    display inline-block
    *display inline
    *zoom 1
    margin-bottom 0
    vertical-align middle

